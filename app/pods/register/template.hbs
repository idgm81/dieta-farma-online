{{#wrapper-bg images=registerBackground}}
  {{register-form
    id='dt-register-page'
    onsubmit='register'}}

  {{#generic-modal id='modal-registration-ok' onclose='goToLogin'}}
    <div class="text-center">
      <i class="fa fa-check-circle" aria-hidden="true"></i>
    </div>
    <h5 class="modal-title">Registro completado!</h5>
  {{/generic-modal}}

  {{#generic-modal id='modal-registration-error'}}
    <div class="text-center">
      <i class="fa fa-times-circle" aria-hidden="true"></i>
    </div>
    <h5 class="modal-title">Error en el registro!</h5>
  {{/generic-modal}}
{{/wrapper-bg}}
