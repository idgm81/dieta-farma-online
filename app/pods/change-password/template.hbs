{{#wrapper-bg images='backgrounds/login.jpg'}}
  <div class="dt-login-page top-content">
    <div class="inner-bg">
      <div class="container">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2 text">
            <h1>
              <strong>
                <a href="/">{{t 'label.dietafarma'}}</a>
              </strong>
              <br>{{t 'label.changePass'}}
            </h1>
          </div>
        </div>
        {{change-pass-form password=password onsubmit='changePass'}}
      </div>
    </div>
  </div>

  {{wait-modal id='modal-change-pass' text=(t 'text.checking')}}

  {{#generic-modal id='modal-change-pass-ok' onclose='goToLogin'}}
    <div class="text-center">
      <i class="fa fa-check-circle" aria-hidden="true"></i>
    </div>
    <h5 class="modal-title">{{t 'text.changePass.ok'}}</h5>
  {{/generic-modal}}

  {{#generic-modal id='modal-change-pass-ko'}}
    <div class="text-center">
      <i class="fa fa-times-circle" aria-hidden="true"></i>
    </div>
    <h5 class="modal-title">{{t 'text.changePass.ko'}}</h5>
  {{/generic-modal}}
{{/wrapper-bg}}
