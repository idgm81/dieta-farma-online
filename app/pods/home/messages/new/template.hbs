<ol class="breadcrumb">
  <li>{{link-to 'Home' 'home'}}</li>
  <li>{{link-to 'Mis mensajes' 'home.messages'}}</li>
  <li class="active">Nuevo mensaje</li>
</ol>

<div class="container">
  <form role="form" id="newMessage">
    <div class="form-group">
      <label for="title">Asunto:</label>
      {{input
        id='title'
        type='text'
        class='form-control'
        name='title'
        value=title}}
      <small class="help-block with-errors"></small>
    </div>

    <div class="form-group">
      <label for="title">Texto:</label>
      {{textarea
        id='message'
        class='form-control'
        rows=4
        name='message'
        value=text}}
      <small class="help-block with-errors"></small>
    </div>

    <div class="btn-group" role="group">
      <button type="button" class="btn btn-df" {{action 'send'}}>Enviar</button>
    </div>
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-danger" {{action 'cancel'}}>Cancelar</button>
    </div>
  </form>
</div>


{{wait-modal id='modal-wait-message' text='Guardando mensaje...'}}

{{#generic-modal id='modal-new-message-ok' onclose='goToMessages'}}
  <div class="text-center">
    <i class="fa fa-check-circle" aria-hidden="true"></i>
  </div>
  <h5 class="modal-title">Mensaje enviado!</h5>
{{/generic-modal}}

{{#generic-modal id='modal-new-message-error'}}
  <div class="text-center">
    <i class="fa fa-times-circle" aria-hidden="true"></i>
  </div>
  <h5 class="modal-title">Error al enviar el mensaje!</h5>
{{/generic-modal}}
