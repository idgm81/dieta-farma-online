<ol class="breadcrumb">
  <li>{{link-to 'Inicio' 'home'}}</li>
  <li class="active">Mis clientes</li>
</ol>

<div class="container">
  {{#each clients as |group|}}
    <div class="row">
      {{#each group as |client|}}
        <div class="col-xs-6 col-md-3">
          <div class="client profile-thumbnail">
            <img src="{{if client.profile.avatar client.profile.avatar  (image-path 'default-avatar.png')}}" alt="avatar" class="profile-img">
            <div class="caption">
              <h3>{{client.profile.name}} {{client.profile.surname}}</h3>
            </div>
            <div class="btn-group btn-group-justified" role="group">
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-info" {{action 'showUser' (get client '_id')}}><i class="fa fa-x fa-eye"></i></button>
              </div>
              <div class="btn-group" role="group">
                <button type="button" class="btn btn-primary" {{action 'sendMessage' (get client '_id')}}><i class="fa fa-x fa-envelope"></i></button>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-warning"></i> Atención</h3>
      </div>
      <div class="panel-body">No tienes asignado ningún cliente</div>
    </div>
  {{/each}}
</div>
