<ol class="breadcrumb">
  <li>{{link-to 'Home' 'home'}}</li>
  <li>{{link-to 'Mis clientes' 'home.clients.index'}}</li>
  <li class="active">Editar</li>
</ol>

<div class="container">
  <form>
    <div class="form-group">
      <label for="title">Titulo:</label>
      {{input type='text' class='form-control' id='title' name='title' value=model.title}}
    </div>

    <div class="form-group">
      {{input-date innerId='fromDate' labelText='Desde:' value=(moment-format model.fromDate 'DD/MM/YYYY')}}
    </div>

    <div class="form-group">
      {{input-date innerId='toDate' labelText='Hasta:' value=(moment-format model.toDate 'DD/MM/YYYY')}}
    </div>

    <div class="form-group">
      <label for="pwd">Detalle:</label>
      {{textarea
        id='detail'
        name='detail'
        class='form-control'
        rows='5'
        value=model.detail}}
    </div>

    <div class="btn-group" role="group">
      <button type="button" class="btn btn-default" {{action 'cancel'}}>Cancelar</button>
      <button type="button" class="btn btn-df" {{action 'save'}}>Guardar</button>
    </div>
  </form>
</div>
