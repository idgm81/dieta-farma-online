<ol class="breadcrumb">
  <li>{{link-to 'Home' 'home'}}</li>
  <li>{{link-to 'Mis clientes' 'home.clients'}}</li>
  <li class="active">Crear dieta</li>
</ol>

<div class="container">
  <div class="loading-container" style="display: none">Guardando dieta...</div>
  <form role="form">
    <div class="form-group">
      <label for="title">Titulo:</label>
      {{input type='text' class='form-control' id='title' name='title' value=title}}
    </div>

    <div class="form-group">
      {{input-date innerId='fromDate' labelText='Desde:' value=fromDate}}
    </div>

    <div class="form-group">
      {{input-date innerId='toDate' labelText='Hasta:' value=toDate}}
    </div>

    <div class="form-group">
      <label for="pwd">Archivo:</label>
      <div class="file-uploader">
        {{file-uploader file=file}}
      </div>
    </div>

    <div class="btn-group" role="group">
      <button type="button" class="btn btn-df" {{action 'save'}}>Guardar</button>
    </div>
  </form>
</div>

{{#generic-modal id='modal-new-diet-ok' onclose='goToHome'}}
  <div class="text-center">
    <i class="fa fa-check-circle" aria-hidden="true"></i>
  </div>
  <h5 class="modal-title">Dieta creada correctamente!</h5>
{{/generic-modal}}

{{#generic-modal id='modal-new-diet-error'}}
  <div class="text-center">
    <i class="fa fa-times-circle" aria-hidden="true"></i>
  </div>
  <h5 class="modal-title">Error al crear la dieta!</h5>
{{/generic-modal}}
