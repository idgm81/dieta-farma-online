<ol class="breadcrumb">
  <li>{{link-to 'Inicio' 'home'}}</li>
  <li class="active">Mis pr√≥ximas citas</li>
</ol>

<section>
  <div class="container">
    <div class="panel panel-df">
      {{#power-calendar
        locale='es'
        class='dieta-farma-calendar-medium'
        center=center
        onCenterChange=(action (mut center) value='moment')
        onSelect=(action 'onSelected' value='moment') as |calendar|}}
        {{calendar.nav}}
        {{#calendar.days as |day|}}
          {{#with (moment-format day.date 'd' locale='es') as |weekday|}}
            {{#if (or (eq weekday '0') (eq weekday '6'))}}
              <strong class="holiday">{{day.number}}</strong>
            {{else}}
              {{day.number}}
            {{/if}}
          {{/with}}
        {{/calendar.days}}
      {{/power-calendar}}
    </div>
  </div>
</section>
<section>
  <div class="container">
    <div class="panel panel-df">
      <div class="panel-heading">Citas para el {{moment-format day 'dddd D [de] MMMM'}}</div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Hora</th>
            <th>Tipo</th>
            <th>Cliente</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each dayAppointments  as |cita|}}
            <tr>
              <td>{{moment-parse-zone cita.date 'HH:mm'}}</td>
              <td>{{if (eq cita.type 'P') 'Presencial' 'Skype'}}</td>
              <td>{{get cita 'customer_data.0.profile.name'}}</td>
              <td><button type="button" class="btn btn-info btn-xs" {{action 'showUser' (get cita 'customer_data.0._id')}}>{{fa-icon 'eye' fixedWidth=true}}</button></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>


