<ol class="breadcrumb">
  <li>{{link-to 'Inicio' 'home'}}</li>
  <li class="active">Mis pr√≥ximas citas</li>
</ol>

<section>
  <div class="container">
    <div class="panel panel-df">
      {{#power-calendar
        locale='es'
        class='dieta-farma-calendar-medium'
        center=center
        onCenterChange=(action (mut center) value='moment')
        onSelect=(action 'onSelected' value='moment') as |calendar|}}
        {{calendar.nav}}
        {{#calendar.days as |day|}}
          {{#with (moment-format day.date 'd' locale='es') as |weekday|}}
            {{#if (or (eq weekday '0') (eq weekday '6'))}}
              <strong class="holiday">{{day.number}}</strong>
            {{else}}
              {{day.number}}
            {{/if}}
          {{/with}}
        {{/calendar.days}}
      {{/power-calendar}}
    </div>
  </div>
</section>
<section>
  <div class="container">
    <div class="panel panel-df">
      <div class="panel-heading">Detalle</div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Tipo</th>
          </tr>
        </thead>
        <tbody>
          {{#each dayAppointments  as |cita|}}
            <tr>
              <td>{{moment-format cita.date 'DD/MM/YYYY'}}</td>
              <td>{{moment-format cita.date 'HH:mm'}}</td>
              <td>{{if (eq cita.type 'P') 'Presencial' 'Skype'}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>

{{wait-modal id='modal-wait-appointment' text='Cancelando cita...'}}

{{#generic-modal id='modal-delete-appointment-ok' onclose='goToCalendar'}}
  <div class="text-center">
    <i class="fa fa-check-circle" aria-hidden="true"></i>
  </div>
  <h5 class="modal-title">Cita cancelada!</h5>
{{/generic-modal}}

{{#generic-modal id='modal-delete-appointment-error'}}
  <div class="text-center">
    <i class="fa fa-times-circle" aria-hidden="true"></i>
  </div>
  <h5 class="modal-title">Error al cancelar la cita!</h5>
{{/generic-modal}}

