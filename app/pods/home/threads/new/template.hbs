<ol class="breadcrumb">
  <li>{{link-to 'Inicio' 'home'}}</li>
  <li>{{link-to 'Mis conversaciones' 'home.threads'}}</li>
  <li class="active">Nueva conversaci√≥n</li>
</ol>

<div class="container">
  <form role="form" id="new-thread">
    <div class="form-group">
      <label for="title">Asunto:</label>
      {{input
        id='title'
        type='text'
        class='form-control'
        name='title'
        value=title}}
      <small class="help-block with-errors"></small>
    </div>

    <div class="form-group">
      <label for="title">Texto:</label>
      {{textarea
        id='message'
        class='form-control'
        rows=4
        name='message'
        value=text}}
      <small class="help-block with-errors"></small>
    </div>

    <div class="btn-group" role="group">
      <button type="button" class="btn btn-df" {{action 'send'}}>Enviar</button>
    </div>
    <div class="btn-group" role="group">
      <button type="button" class="btn btn-danger" {{action 'cancel'}}>Cancelar</button>
    </div>
  </form>
</div>


{{wait-modal id='modal-wait-thread' text='Guardando mensaje...'}}

{{#generic-modal id='modal-new-thread-ok' onclose='goToThreads'}}
  <div class="text-center">{{fa-icon 'check-circle'}}</div>
  <h5 class="modal-title text-center">Mensaje enviado!</h5>
{{/generic-modal}}

{{#generic-modal id='modal-new-thread-error'}}
  <div class="text-center">{{fa-icon 'times-circle'}}</div>
  <h5 class="modal-title text-center">Error al enviar el mensaje!</h5>
{{/generic-modal}}
