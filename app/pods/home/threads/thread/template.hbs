<ol class="breadcrumb">
  <li>{{link-to 'Inicio' 'home'}}</li>
  <li>{{link-to 'Mis conversaciones' 'home.threads.index'}}</li>
  <li class="active">{{model.title}}</li>
</ol>

<div class="container">
  <ul class="chat">
    {{#each messages as |message|}}
      {{#if (not-eq message.author userId)}}
        <li class="left clearfix">
          <span class="chat-img pull-left">
            <img src="{{if (eq customerId userId) customerAvatar nutritionistAvatar}}" alt="avatar" class="img-circle">
          </span>
          <div class="chat-body clearfix">
            <div class="header">
              <strong class="primary-font">{{if (eq customerId userId) customerName nutritionistName}}</strong>
              <small class="pull-right text-muted"><i class="fa fa-clock-o"></i>&nbsp;{{moment-from-now message.date hidePrefix=true}}</small>
            </div>
            <p>{{message.text}}</p>
          </div>
        </li>
      {{else}}
        <li class="right clearfix">
          <span class="chat-img pull-right">
            <img src="{{if (eq customerId userId) customerAvatar nutritionistAvatar}}" alt="avatar" class="img-circle">
          </span>
          <div class="chat-body clearfix">
              <div class="header">
                <small class="text-muted"><i class="fa fa-clock-o"></i>&nbsp;{{moment-from-now message.date hidePrefix=true}}</small>
              </div>
              <p>{{message.text}}</p>
          </div>
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>

<div class="reply-message col-xs-12">
  <div class="input-group">
    {{textarea id='reply-message' class='form-control input-sm' rows='1' value=messageText}}
    <span class="input-group-btn">
      <button class="btn btn-df btn-sm" id="btn-send" {{action 'send' (get model '_id') messageText}}>Enviar</button>
    </span>
  </div>
</div>