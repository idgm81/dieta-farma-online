<div class="row">
  <div class="col-sm-6 col-sm-offset-3 form-box">
    <div class="form-top">
      <div class="form-top-left">
        <p>Escoge tu nueva contraseña</p>
      </div>
      <div class="form-top-right">{{fa-icon 'lock'}}</div>
    </div>
    <div class="form-bottom">
      <form role="form" class="pass-form">
        <div class="form-group">
          <label class="sr-only" for="form-password">Contraseña</label>
          {{input
            id='form-password'
            name='form-password'
            type='password'
            class='form-password form-control'
            value=password
            minlength='8'
            required=true
            autocomplete='off'
            placeholder='Contraseña'}}
          <small class="help-block with-errors"></small>
        </div>
        <div class="form-group">
          <label class="sr-only" for="form-confirm-password">Confirma tu contraseña</label>
          {{input
            id='form-confirm-password'
            name='form-confirm-password'
            type='password'
            class='form-password form-control'
            value=confirmPassword
            minlength='8'
            required=true
            placeholder='Confirma tu contraseña'}}
          <small class="help-block with-errors"></small>
        </div>
        <button class="btn" type="submit">Aceptar</button>
      </form>
    </div>
  </div>
</div>
