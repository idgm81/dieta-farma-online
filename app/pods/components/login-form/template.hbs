<div class="inner-bg">
  <div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2 text">
        <h1><strong><a href="/">Dietafarma</a></strong> Acceso privado</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 form-box">
        <div class="form-top">
          <div class="form-top-left">
            <p>Introduce tu usuario y contraseña para acceder:</p>
          </div>
          <div class="form-top-right">
            <i class="fa fa-lock"></i>
          </div>
        </div>
        <div class="form-bottom">
          <form role="form" class="login-form">
            <div class="form-group">
              <label class="sr-only" for="form-username">Usuario</label>
              {{input
                id='form-username'
                name='form-username'
                type='email'
                class='form-username form-control'
                value=email
                placeholder='Usuario'}}
            </div>
            <div class="form-group">
              <label class="sr-only" for="form-password">Contraseña</label>
              {{input
                id='form-password'
                name='form-password'
                type='password'
                class='form-password form-control'
                value=password
                placeholder='Contraseña'}}
            </div>
            {{#if authError}}
              <div><p>{{msgError}}</p></div>
            {{/if}}
            <button class="btn" {{action 'submit'}}>Acceder</button>
            <div class="loader" style="display: none">Accediendo...</div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
